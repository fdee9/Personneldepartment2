            android:name=".peopleActivities.EditCandidateActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".peopleActivities.AddPersonActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".peopleActivities.PeopleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GeneralMenuActivity"
            android:label="@string/title_activity_general_menu"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>